:root {
    --bg-primary: #e0e5ec;
    --bg-secondary: #e0e5ec;
    --bg-card: #e0e5ec;
    --bg-card-hover: #d6dbe3;
    --accent: #4a90e2;
    --accent-hover: #357abd;
    --accent-light: rgba(74, 144, 226, 0.1);
    --text-primary: #2c3e50;
    --text-secondary: #5a6c7d;
    --text-muted: #8898aa;
    --border: transparent;
    --border-hover: transparent;
    --gradient: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
    --neu-shadow-dark: #a3b1c6;
    --neu-shadow-light: #ffffff;
    --shadow-light: -6px -6px 12px rgba(255, 255, 255, 0.8), 6px 6px 12px rgba(163, 177, 198, 0.6);
    --shadow-dark: inset -4px -4px 8px rgba(255, 255, 255, 0.5), inset 4px 4px 8px rgba(163, 177, 198, 0.4);
    --shadow-hover: -8px -8px 16px rgba(255, 255, 255, 0.9), 8px 8px 16px rgba(163, 177, 198, 0.7);
    --border-radius: 16px;
    --border-radius-sm: 14px;
    --skeleton-base: #d1d9e6;
    --skeleton-highlight: #e8eef5;
}

[data-theme="dark"] {
    --bg-primary: #2a2d37;
    --bg-secondary: #2a2d37;
    --bg-card: #2a2d37;
    --bg-card-hover: #34384a;
    --accent: #60a5fa;
    --accent-hover: #3b82f6;
    --accent-light: rgba(96, 165, 250, 0.1);
    --text-primary: #e4e7eb;
    --text-secondary: #9ca3af;
    --text-muted: #6b7280;
    --border: transparent;
    --border-hover: transparent;
    --gradient: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    --neu-shadow-dark: #1a1d25;
    --neu-shadow-light: #3a3f4f;
    --shadow-light: -6px -6px 12px rgba(46, 50, 62, 0.8), 6px 6px 12px rgba(16, 18, 23, 0.8);
    --shadow-dark: inset -4px -4px 8px rgba(46, 50, 62, 0.6), inset 4px 4px 8px rgba(16, 18, 23, 0.6);
    --shadow-hover: -8px -8px 16px rgba(46, 50, 62, 0.9), 8px 8px 16px rgba(16, 18, 23, 0.9);
    --skeleton-base: #34384a;
    --skeleton-highlight: #404555;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    overflow-x: hidden;
    overflow-y: hidden;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    height: 100vh;
    width: 100vw;
    transition: background-color 0.3s ease, color 0.3s ease;
    position: relative;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
        radial-gradient(circle at 20% 50%, rgba(74, 144, 226, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(53, 122, 189, 0.02) 0%, transparent 50%);
    z-index: -1;
    animation: moveBackground 20s ease-in-out infinite;
    pointer-events: none;
}

@keyframes moveBackground {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, 20px) scale(1.05); }
}

@media (max-width: 1920px) {
    body {
        overflow-y: auto;
        height: auto;
        min-height: 100vh;
    }
}

.theme-toggle {
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    z-index: 1000;
    background: var(--bg-card);
    border: none;
    border-radius: 50%;
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-light);
    font-size: 1.3rem;
    position: relative;
    overflow: hidden;
}

.theme-toggle::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 50%;
}

.theme-toggle i {
    color: var(--accent);
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
}

.theme-toggle:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-3px) rotate(180deg);
}

.theme-toggle:hover::before {
    opacity: 0.15;
}

.theme-toggle:hover i {
    color: var(--accent-hover);
    transform: scale(1.2);
}

.theme-toggle:active {
    box-shadow: var(--shadow-dark);
    transform: translateY(0) rotate(0deg);
}

.skeleton {
    background: linear-gradient(90deg, var(--skeleton-base) 25%, var(--skeleton-highlight) 50%, var(--skeleton-base) 75%);
    background-size: 200% 100%;
    animation: skeleton-loading 1.5s infinite;
    border-radius: 4px;
}

@keyframes skeleton-loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
}

.kpi-value.loading, .route-item.loading, .stop-item.loading, .hub-item.loading {
    height: 1.5rem;
    width: 60%;
    margin: 0 auto;
}

.container {
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 1.2vw;
    display: flex;
    flex-direction: column;
    gap: 1.2vw;
}

@media (max-width: 1920px) {
    .container {
        height: auto;
        min-height: 100vh;
    }
}

.kpi-section {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1.2vw;
    height: 8vh;
    min-height: 60px;
    flex-shrink: 0;
    padding: 0;
}

.kpi-card {
    background: var(--bg-card);
    border-radius: var(--border-radius-sm);
    border: none;
    position: relative;
    overflow: visible;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-light);
    display: flex;
    flex-direction: column;
    min-width: 0;
}

.kpi-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--gradient);
    border-radius: var(--border-radius-sm) var(--border-radius-sm) 0 0;
    z-index: 10;
}

.kpi-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-3px);
}

.kpi-header {
    padding: 0.6vh 0.5vw;
    padding-top: 0.8vh;
    border-bottom: none;
    background: var(--bg-card);
    flex-shrink: 0;
    text-align: center;
    position: relative;
}

.kpi-header h3 {
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: clamp(0.65rem, 0.75vw, 0.8rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    transition: all 0.3s ease;
}

.kpi-card:hover .kpi-header h3 {
    letter-spacing: 2px;
    transform: scale(1.05);
}


.kpi-content {
    flex: 1;
    padding: 1.2vh 1vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5vh;
    background: var(--bg-primary);
    margin: 0.4vw;
    border-radius: 10px;
    box-shadow:
        inset 3px 3px 6px var(--neu-shadow-dark),
        inset -3px -3px 6px var(--neu-shadow-light);
}

.kpi-value {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1rem, 1.6vw, 2.2rem);
    font-weight: 800;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    word-break: break-all;
    transition: all 0.3s ease;
    filter: drop-shadow(0 0 8px rgba(74, 144, 226, 0.3));
}

.kpi-card:hover .kpi-value {
    transform: scale(1.15);
    filter: drop-shadow(0 0 12px rgba(74, 144, 226, 0.5));
}

.kpi-label {
    color: var(--text-muted);
    font-size: clamp(0.55rem, 0.6vw, 0.65rem);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 0.5vh;
    opacity: 0.8;
    transition: all 0.3s ease;
}

.kpi-card:hover .kpi-label {
    color: var(--text-secondary);
    opacity: 1;
    letter-spacing: 1.2px;
}

.dashboard-grid {
    display: grid;
    grid-template-columns: 3fr 3fr;
    gap: 1.2vw;
    flex: 1;
    min-height: 0;
    padding: 0;
}

.map-container {
    display: flex;
    min-width: 0;
    min-height: 0;
    height: 100%;
}

.map-container .widget {
    width: 100%;
    height: 100%;
}

.map-container .widget-content {
    padding: 0;
    height: 100%;
}

#map {
    height: 100%;
    width: 100%;
    background: var(--bg-primary);
    overflow: hidden;
}

.widgets-container {
    display: flex;
    flex-direction: column;
    gap: 1.2vw;
    min-width: 0;
    min-height: 0;
}

.charts-group {
    display: flex;
    gap: 1.2vw;
    min-height: 0;
    flex: 1;
}

.charts-group .widget {
    flex: 1;
    min-width: 0;
}

.lists-group {
    display: flex;
    gap: 1.2vw;
    min-height: 0;
    flex: 1;
}

.lists-group .widget {
    flex: 1;
    min-width: 0;
}

.widget {
    background: var(--bg-card);
    border: none;
    border-radius: var(--border-radius-sm);
    overflow: visible;
    display: flex;
    flex-direction: column;
    position: relative;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-light);
    min-height: 0;
    min-width: 0;
}

.widget::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--gradient);
    border-radius: var(--border-radius-sm) var(--border-radius-sm) 0 0;
    z-index: 10;
}

.widget:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-3px);
}

.widget-header {
    padding: 0.9vh 1vw;
    padding-top: 1.1vh;
    border-bottom: none;
    background: var(--bg-card);
    flex-shrink: 0;
    position: relative;
}

.widget-header h3 {
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: clamp(0.75rem, 0.85vw, 0.95rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: all 0.3s ease;
    filter: drop-shadow(0 0 8px rgba(74, 144, 226, 0.3));
}

.widget:hover .widget-header h3 {
    letter-spacing: 2.5px;
    transform: scale(1.03);
    filter: drop-shadow(0 0 12px rgba(74, 144, 226, 0.5));
}

.widget-content {
    padding: 1.2vw;
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    background: var(--bg-card);
    min-height: 0;
    gap: 1vh;
}

#map {
    height: 100%;
    width: 100%;
    background: var(--bg-primary);
    overflow: hidden;
    flex: 1;
    min-height: 400px;
    border-radius: var(--border-radius-sm);
    overflow: hidden;
    flex: 1;
}

.leaflet-control-attribution {
    display: none !important;
}

.leaflet-control-zoom {
    margin: 10px !important;
}

.leaflet-popup-content-wrapper, .leaflet-popup-tip {
    background: var(--bg-card) !important;
    color: var(--text-primary) !important;
    border: 1px solid var(--border) !important;
    border-radius: var(--border-radius-sm) !important;
    box-shadow: var(--shadow) !important;
}

.leaflet-popup-content {
    font-family: 'Inter', sans-serif !important;
    font-size: clamp(0.7rem, 0.8vw, 0.875rem);
}

.marker-cluster-small, .marker-cluster-medium, .marker-cluster-large {
    background-color: var(--accent-light) !important;
}

.marker-cluster-small div, .marker-cluster-medium div, .marker-cluster-large div {
    background-color: var(--accent) !important;
    color: #ffffff !important;
    font-weight: 700 !important;
}

[data-theme="dark"] .leaflet-tile-pane {
    filter: brightness(0.6) invert(1) contrast(3) hue-rotate(200deg) saturate(0.3) brightness(0.7);
}

.list-container {
    flex: 1;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--accent) var(--bg-primary);
    min-height: 0;
    padding: 0.5vw;
    background: var(--bg-primary);
    border-radius: 8px;
    box-shadow:
        inset 4px 4px 8px var(--neu-shadow-dark),
        inset -4px -4px 8px var(--neu-shadow-light);
}

.route-item, .stop-item, .hub-item {
    display: flex;
    align-items: center;
    gap: 0.8vw;
    padding: 1vh 1vw;
    border-bottom: none;
    margin-bottom: 1vh;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-size: clamp(0.7rem, 0.8vw, 0.85rem);
    position: relative;
    background: var(--bg-card);
    box-shadow:
        4px 4px 8px var(--neu-shadow-dark),
        -4px -4px 8px var(--neu-shadow-light);
}

.route-item::before, .stop-item::before, .hub-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--gradient);
    border-radius: 12px 0 0 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.route-item:hover, .stop-item:hover, .hub-item:hover {
    box-shadow:
        6px 6px 12px var(--neu-shadow-dark),
        -6px -6px 12px var(--neu-shadow-light);
    transform: translateX(4px);
}

.route-item:hover::before, .stop-item:hover::before, .hub-item:hover::before {
    opacity: 1;
}

.route-badge {
    min-width: clamp(40px, 3vw, 50px);
    height: clamp(24px, 2vh, 30px);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-weight: 800;
    font-size: clamp(0.7rem, 0.75vw, 0.85rem);
    flex-shrink: 0;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow:
        4px 4px 8px rgba(0, 0, 0, 0.3),
        inset -2px -2px 4px rgba(0, 0, 0, 0.2),
        inset 2px 2px 4px rgba(255, 255, 255, 0.1);
}

.route-badge::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transform: rotate(45deg);
    transition: all 0.5s ease;
    opacity: 0;
}

.route-item:hover .route-badge::after {
    opacity: 1;
    animation: shine 0.8s ease;
}

@keyframes shine {
    0% { transform: translateX(-100%) rotate(45deg); }
    100% { transform: translateX(100%) rotate(45deg); }
}

.route-item:hover .route-badge {
    transform: scale(1.15);
    box-shadow:
        6px 6px 12px rgba(0, 0, 0, 0.4),
        inset -2px -2px 4px rgba(0, 0, 0, 0.3),
        inset 2px 2px 4px rgba(255, 255, 255, 0.2);
}

.stop-rank, .hub-rank {
    width: clamp(28px, 2.2vw, 36px);
    height: clamp(28px, 2.2vw, 36px);
    border-radius: 50%;
    border: none;
    background: var(--bg-card);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: clamp(0.7rem, 0.75vw, 0.85rem);
    flex-shrink: 0;
    box-shadow:
        inset 3px 3px 6px var(--neu-shadow-dark),
        inset -3px -3px 6px var(--neu-shadow-light);
    transition: all 0.5s ease;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.stop-rank::before, .hub-rank::before {
    content: attr(data-rank);
    position: absolute;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.stop-item:hover .stop-rank,
.hub-item:hover .hub-rank {
    transform: scale(1.15) rotate(360deg);
    box-shadow:
        3px 3px 6px var(--neu-shadow-dark),
        -3px -3px 6px var(--neu-shadow-light);
}

.route-info, .stop-info, .hub-info {
    flex: 1;
    min-width: 0;
}

.route-name, .stop-name, .hub-name {
    font-weight: 700;
    color: var(--text-primary);
    font-size: clamp(0.75rem, 0.85vw, 0.95rem);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: all 0.3s ease;
    letter-spacing: 0.3px;
}

.route-item:hover .route-name,
.stop-item:hover .stop-name,
.hub-item:hover .hub-name {
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 0.5px;
    transform: translateX(2px);
}

.route-desc, .stop-count, .hub-details {
    color: var(--text-secondary);
    font-size: clamp(0.65rem, 0.7vw, 0.75rem);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: all 0.3s ease;
    margin-top: 0.2vh;
}

.route-item:hover .route-desc,
.stop-item:hover .stop-count,
.hub-item:hover .hub-details {
    color: var(--text-primary);
    font-weight: 600;
}

.hub-lines {
    display: inline-block;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: clamp(0.65rem, 0.7vw, 0.75rem);
    font-weight: 800;
    margin-top: 0.3vh;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: all 0.3s ease;
    padding: 0.2vh 0.5vw;
    border-radius: 6px;
    position: relative;
}

.hub-lines::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--bg-primary);
    border-radius: 6px;
    z-index: -1;
    box-shadow:
        inset 2px 2px 4px var(--neu-shadow-dark),
        inset -2px -2px 4px var(--neu-shadow-light);
}

.hub-item:hover .hub-lines {
    letter-spacing: 0.8px;
    transform: scale(1.05);
}

.top-badge, .busy-badge {
    display: inline-block;
    padding: 0.3vh 0.6vw;
    border-radius: 8px;
    font-size: clamp(0.55rem, 0.6vw, 0.65rem);
    font-weight: 800;
    color: #ffffff;
    margin-left: 0.5vw;
    vertical-align: middle;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow:
        3px 3px 6px rgba(0, 0, 0, 0.3),
        inset -1px -1px 2px rgba(0, 0, 0, 0.2),
        inset 1px 1px 2px rgba(255, 255, 255, 0.1);
}

.busy-badge {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.activity-bar {
    height: 4px;
    border-radius: 4px;
    margin-top: 0.5vh;
    transition: all 0.3s ease;
    box-shadow:
        inset 2px 2px 4px rgba(0, 0, 0, 0.3),
        inset -1px -1px 2px rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.activity-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.stop-count, .hub-details {
    position: relative;
}

.chart-container {
    flex: 1;
    position: relative;
    min-height: 0;
    padding: 1.5vh 1.5vw;
    background: var(--bg-primary);
    border-radius: 12px;
    box-shadow:
        inset 4px 4px 8px var(--neu-shadow-dark),
        inset -4px -4px 8px var(--neu-shadow-light);
}

::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: var(--bg-primary);
    border-radius: 10px;
    box-shadow: var(--shadow-dark);
}

::-webkit-scrollbar-thumb {
    background: var(--bg-card);
    border-radius: 10px;
    box-shadow: var(--shadow-light);
    border: 2px solid var(--bg-primary);
}

::-webkit-scrollbar-thumb:hover {
    box-shadow: var(--shadow-hover);
}

::-webkit-scrollbar-thumb:active {
    box-shadow: var(--shadow-dark);
}

* {
    scrollbar-width: thin;
    scrollbar-color: var(--bg-card) var(--bg-primary);
}

@media (max-width: 1920px) {
    .kpi-section {
        height: auto !important;
        min-height: 55px !important;
    }

    .dashboard-grid {
        grid-template-columns: 1fr !important;
        grid-template-rows: auto auto !important;
        flex: none !important;
    }

    .map-container {
        height: 50vh !important;
        min-height: 400px !important;
        max-height: 50vh !important;
    }

    .map-container .widget {
        height: 100% !important;
        max-height: 50vh !important;
    }

    #map {
        height: 100% !important;
        min-height: 400px !important;
        max-height: 50vh !important;
    }

    .widgets-container {
        flex-direction: row !important;
        min-height: auto !important;
        max-height: none !important;
    }

    .charts-group, .lists-group {
        flex-direction: column !important;
        flex: 1 !important;
    }

    .charts-group .widget, .lists-group .widget {
        min-height: 250px !important;
        max-height: 400px !important;
    }

    .chart-container {
        max-height: 350px !important;
    }
}

@media (min-width: 1921px) and (max-width: 2559px) {
    .kpi-section {
        height: 6vh;
        min-height: 50px;
    }
}

@media (min-width: 2560px) {
    .kpi-section {
        height: 5.5vh;
        min-height: 60px;
    }

    .kpi-value {
        font-size: clamp(1.5rem, 1.8vw, 2.5rem);
    }

    .dashboard-grid {
        grid-template-columns: 3fr 3fr;
    }
}

@media (min-width: 3840px) {
    .kpi-section {
        height: 5vh;
        min-height: 70px;
    }

    .kpi-value {
        font-size: clamp(2rem, 1.5vw, 3rem);
    }

    .dashboard-grid {
        grid-template-columns: 3fr 3fr;
    }
}
